<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="10">

    <!-- 로그 패턴 커스터마이징 -->
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] [PID:%pid] %-5level %logger{36} - %msg%n
        </Property>
    </Properties>

    <Appenders>

        <!-- 콘솔 출력용 AsyncAppender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Filters>
                <!-- "Exception"이 포함된 로그만 출력 -->
                <RegexFilter regex=".*Exception.*" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <!-- WARN 이상만 출력 -->
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>

        <Async name="AsyncConsole">
            <AppenderRef ref="Console"/>
        </Async>

        <!-- 파일 출력용 AsyncAppender (info 이상) -->
        <RollingFile name="FileAppender"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- INFO 이상만 기록 -->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>

        <Async name="AsyncFile">
            <AppenderRef ref="FileAppender"/>
        </Async>

    </Appenders>

    <Loggers>

        <!-- com.jroxy.linkfriend 패키지 로그 레벨: DEBUG -->
        <Logger name="com.jroxy.linkfriend" level="debug" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- 루트 로거: INFO 이상만 -->
        <Root level="info">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Root>

    </Loggers>
</Configuration>